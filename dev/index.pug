doctype html
html(lang="en")
    block vars
    head
        meta(charset="UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1")
        link(rel="stylesheet" href="css/index.css")
        title Weather
        link(rel="icon" type="image/x-icon" href="weather.ico")
    body
        .container
            .row
                .weather
                    #icon.weather__icon.updatable
                    .weather__list
                        p.text.text_title Temperature:
                        p#temp.text.updatable
                        p.text.text_title Pressure:
                        p#pressure.text.updatable
                        p.text.text_title Humidity:
                        p#humidity.text.updatable
                        p.text.text_title Latitude:
                        p#lat.text.updatable
                        p.text.text_title Longitude:
                        p#lng.text.updatable
                        p.text.text_title Address:
                        p#address.text.updatable
            .row
                #map.map
        script(type="text/javascript" src="js/app.js")
        script(async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0ActUGaLxSQdUaN6RdrNiCEvmMIoDa78&callback=initMap")
