doctype html
html(lang="en")
    block vars
    head
        meta(charset="UTF-8")
        meta(name = "viewport" content = "width=device-width, initial-scale=1")
        link(rel="stylesheet" href="css/index.css")
        title Weather
        style.
            #map {
                height: 100vh;
                width: 100vw;
            }
    body
        .container
            .row
                .weather
                    .weather__list
                        p#temp.text
                        p#pressure.text
                        p#humidity.text
                        p#lat.text
                        p#lng.text
            .row
                #map
        script(type="text/javascript" src="js/app.js")
        script(async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0ActUGaLxSQdUaN6RdrNiCEvmMIoDa78&callback=initMap")
