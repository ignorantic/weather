{
  "name": "weather",
  "version": "1.0.0",
  "description": "weather project",
  "main": "index.js",
  "scripts": {
    "sass-lint": "sass-lint -c .sass-lint.yml 'dev/**/*.sass' -v -q || true",
    "node-sass": "node-sass -o build/css dev --output-style expanded || true",
    "autoprefixer": "postcss -u autoprefixer -r build/css/*",
    "pug-lint": "pug-lint -c .pug-lintrc.json dev || true",
    "pug": "pug -P -o build dev/*.pug || true",
    "eslint": "eslint dev/lib dev/index dev/components || true",
    "webpack": "webpack",
    "uglify": "uglifyjs build/js/app.js -m -o build/js/app.min.js",
    "fonts": "copyfiles -e '**/fonts/*.sass' -f dev/fonts/*.* build/fonts",
    "imagemin": "rimraf build/img && imagemin dev/img/* -o build/img",
    "spritesmith": "spritesmith --rc .spritesmith.js",
    "clean": "rimraf build",
    "build-css": "npm run sass-lint && npm run node-sass",
    "build-html": "npm run pug-lint && npm run pug",
    "build-js": "npm run eslint && npm run webpack",
    "build-all": "npm run clean && npm run build-html && npm run build-css && npm run build-js && npm run imagemin && npm run spritesmith && npm run fonts",
    "serve": "browser-sync start --server build --files 'build/*.html, build/css/*.css, build/js/*.js'",
    "watch-html": "onchange 'dev/**/*.pug' -- npm run build-html",
    "watch-css": "onchange 'dev/**/*.sass' -- npm run build-css",
    "watch-js": "onchange 'dev/**/*.js' -- npm run build-js",
    "watch-fonts": "onchange 'dev/fonts/*.*' -- npm run fonts",
    "watch-img": "onchange 'dev/img/*.*' -- npm run imagemin",
    "watch-lint-pug": "onchange 'dev/**/*.pug' -- npm run pug-lint",
    "watch-lint-sass": "onchange 'dev/**/*.sass' -- npm run sass-lint",
    "watch-lint-js": "onchange 'dev/**/*.js' -- npm run eslint",
    "watch-all": "parallelshell 'npm run serve' 'npm run watch-html' 'npm run watch-css' 'npm run watch-js' 'npm run watch-fonts' 'npm run watch-img'",
    "watch-lint-all": "parallelshell 'npm run watch-lint-pug' 'npm run watch-lint-sass' 'npm run watch-lint-js'"
  },
  "author": "snaut",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.3.26",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.12",
    "copyfiles": "^1.2.0",
    "eslint": "^4.0.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.1",
    "postcss-cli": "^4.1.0",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.4.0",
    "rimraf": "^2.6.1",
    "sass-lint": "^1.10.2",
    "spritesmith-cli": "^1.1.2",
    "webpack": "^3.0.0"
  },
  "repository": {},
  "bugs": {},
  "homepage": ""
}
